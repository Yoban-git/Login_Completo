@page "/AltaPermisos"
@using PruebaLogin.Models.Permisos
@using PruebaLogin.ViewModels.PermissionController
@inject PermisoService _permisoService
@inject NavigationManager navManagers
<h3>AltaPermiso</h3>

<h2>Gestión de Permisos</h2>

<button class="btn btn-primary mb-3" @onclick="MostrarFormularioNuevoPermiso">Agregar Permiso</button>

@if (mostrarFormularioPermiso)
{
    <EditForm Model="permisoActual" OnValidSubmit="GuardarPermiso">
        <DataAnnotationsValidator />

        <div class="form-floating mb-3">
            <InputText class="form-control" id="nombrePermiso" @bind-Value="permisoActual.NombrePermiso" />
            <label for="nombrePermiso">Nombre del Permiso</label>
            <ValidationMessage For="@(() => permisoActual.NombrePermiso)" />
        </div>

        <button type="submit" class="btn btn-success">Guardar</button>
        <button type="button" class="btn btn-secondary" @onclick="CancelarPermiso">Cancelar</button>
    </EditForm>
}

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nombre del Permiso</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var permiso in permisos)
        {
            <tr>
                <td>@permiso.NombrePermiso</td>
                <td>
                    <button class="btn btn-warning btn-sm" @onclick="() => EditarPermiso(permiso)">Editar</button>
                    <button class="btn btn-danger btn-sm" @onclick="() => EliminarPermiso(permiso.IdPermiso)">Eliminar</button>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (!string.IsNullOrEmpty(mensajeError))
{
    <div class="alert alert-danger mt-3">@mensajeError</div>
}
@if (!string.IsNullOrEmpty(mensajeExito))
{
    <div class="alert alert-success mt-3">@mensajeExito</div>

}

@code {
    private List<Permisos2> permisos = new();
    private Permisos2 permisoActual = new Permisos2();
    private bool mostrarFormularioPermiso = false;

    private string mensajeError;
    private string mensajeExito;

    protected override async Task OnInitializedAsync()
    {
        await CargarPermisos();
    }
    private async Task CargarPermisos() => permisos = await _permisoService.ObtenerTodosPermisosAsync();

    // Métodos Permisos
    private void MostrarFormularioNuevoPermiso() { permisoActual = new Permisos2(); mostrarFormularioPermiso = true; }
    private void EditarPermiso(Permisos2 permiso) { permisoActual = new Permisos2 { IdPermiso = permiso.IdPermiso, NombrePermiso = permiso.NombrePermiso }; mostrarFormularioPermiso = true; }
    private async Task GuardarPermiso()
    {
        ResultadoOperacionP resultado = permisoActual.IdPermiso == 0
            ? await _permisoService.AgregarPermisoAsync(permisoActual)
            : await _permisoService.ActualizarPermisoAsync(permisoActual);

        if (resultado.Exito) { mensajeExito = "Permiso guardado correctamente."; mensajeError = string.Empty; mostrarFormularioPermiso = false; await CargarPermisos(); }
        else { mensajeError = resultado.Error; mensajeExito = string.Empty; }
    }
    private async Task EliminarPermiso(int idPermiso)
    {
        var resultado = await _permisoService.EliminarPermisoAsync(idPermiso);
        if (resultado.Exito) { mensajeExito = "Permiso eliminado."; mensajeError = string.Empty; await CargarPermisos(); }
        else { mensajeError = resultado.Error; mensajeExito = string.Empty; }
    }
    private void CancelarPermiso() {  navManagers.NavigateTo("/Lista_Permisos"); }
}
